@model List<CP.Entities.Model.Roles>


<div class="table table-responsive tblresponsive">
    <table class="table table-bordered display no-wrap" cellspacing="0" width="100%" id="tblRole">
        <thead>
            <tr>
                <th name="first">
                   #
                </th>
                <th>Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody id="TdRolesList">
            @foreach (var Role in Model)
            {
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        @Role.Name
                    </td>
                    <td class="text-center">
                        <i class="fas fa-pencil-alt pencil-edit RoleUpdate mr-2" data-id="@Role.Id"></i>

                        <i class="fa fa-trash trash-edit RoleDelete" data-id="@Role.Id"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
