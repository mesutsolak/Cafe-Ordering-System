
@{
    ViewBag.Title = "Slider";
}

<div class="alert alert-info mt-3" role="alert">
    <div class="d-flex flex-row bd-highlight">
        <div class="p-2 bd-highlight">
            <i class="fas fa-info-circle fa-2x"></i>
        </div>
        <div class="p-2 bd-highlight mt-1">
            Slider üzerinde işlem yapmak için aşağıdaki listeyi kullanın.
        </div>
    </div>
</div>


<div class="card mt-4">
    <div class="card-header">
        <div class="d-flex bd-highlight">
            <div class="p-2 bd-highlight mt-1">
                <i class="fas fa-sliders-h fa-2x"></i>
            </div>
            <div class="p-2 bd-highlight">
                <h2>Slider</h2>
            </div>
            <div class="ml-auto p-2 bd-highlight">
                <button class="btn btn-primary" id="btnSliderAdd">
                    <i class="fas fa-plus"></i> Slider Ekle
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="card-title">
        </div>
        <div class="slider-list">
            @Html.Action("SliderList", "Company")
        </div>
    </div>
</div>






<div class="slider-add">
    @Html.Action("SliderAdd", "Company")
</div>

<div class="slider-update">

</div>

<div class="modal inmodal" id="ImageShowModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-image mr-2"></i>Resim Görüntüle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="" id="ImgViewSrc" width="100%" />
            </div>
        </div>
    </div>
</div>


@section css {
    <link href="~/Content/framework/DataTable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}


@section js {
    <script src="~/Content/framework/DataTable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/framework/DataTable/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/js/Pagejs/Slider.js"></script>
}