
@{
    ViewBag.Title = "Slider";
}


<div class="d-flex mb-2 mt-3">
    <div class="p-2 bd-highlight">
        <h2>Slider</h2>
    </div>
    <div class="ml-auto p-2 mt-2">
        <button class="btn btn-primary" id="btnSliderAdd">
            <i class="fas fa-plus"></i> Slider Ekle
        </button>
    </div>
</div>


<div class="slider-list">
    @Html.Action("SliderList", "Company")
</div>

<div class="slider-add">
    @Html.Action("SliderAdd", "Company")
</div>

<div class="slider-update">

</div>

<div class="modal inmodal" id="ImageShowModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-image mr-2"></i>Resim Görüntüle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="" id="ImgViewSrc" width="100%" />
            </div>
        </div>
    </div>
</div>



@section js {
    <script src="~/Content/js/Pagejs/Slider.js"></script>
}