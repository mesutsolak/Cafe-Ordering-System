@model CP.ServiceLayer.DTO.PasswordForgetDTO

<div class="modal inmodal" id="ProductAddModal" tabindex="-1" role="dialog" aria-hidden="true">
<div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content animated bounceInRight">
        <div class="modal-header">
            <h5 class="modal-title"><i class="fa fa-bars mr-2"></i>Ürün Ekle</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("PasswordOperation", "User", FormMethod.Post, new AjaxOptions()
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                OnSuccess = "returnPostJson(data)",
                LoadingElementId = "loading-background",
            },
            new
            {
                @class = "PasswordForget",
                @id = "frmPasswordForget",
                @name = "frmPasswordForget",
            }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextAreaFor(model => model.Email, new { @class = "form-control", @spellcheck = "false" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger error-validate" })
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" id="ProductClear">
                <i class="fa fa-trash mr-1"></i>
                Temizle
            </button>
            <button type="button" class="btn btn-primary" id="ProductSave">
                <i class="fa fa-save mr-1"></i>
                Kaydet
            </button>
        </div>
    </div>
</div>
</div>