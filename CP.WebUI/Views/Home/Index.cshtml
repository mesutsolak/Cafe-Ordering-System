
@{
    ViewBag.Title = "Anasayfa";
}


<div class="mt-3">
    <h3>Firma Durumu : </h3>
    <hr />
</div>

<div class="row mt-3">
    <div class="col-4">
        <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <i class="fas fa-box-open mr-2"></i>
                Ürünler
                <label class="text-right">
                    0
                </label>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Kafe içerisindeki satılan ürünlerin genel sayısı.
                </p>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card text-white bg-danger mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <i class="fas fa-bars mr-2"></i>
                Kategoriler
                <label class="text-right">
                    0
                </label>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Ürünler için kullanılan kategorilerin genel sayısı.
                </p>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <i class="fas fa-users mr-2"></i>
                Kullanıcılar
                <label class="text-right">
                    0
                </label>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Kafe içindeki programı kullanan kullanıcıların genel sayısı.
                </p>
            </div>
        </div>
    </div>
</div>
<div class="mt-2">
    <h3>Firma Grafikleri : </h3>
    <hr />
</div>
<div class="row mt-4">
    <div class="col-6">
        <canvas id="users-chart" class="charts-border" width="400" height="400"></canvas>
    </div>
    <div class="col-6">
        <canvas id="products-chart" class="charts-border" width="400" height="400"></canvas>
    </div>
</div>





@section css{
    <link href="~/Content/css/Chart.css" rel="stylesheet" />
    <link href="~/Content/css/home.css" rel="stylesheet" />
}

@section js{
    <script src="~/Content/js/Chart.js"></script>
    <script src="~/Content/js/Pagejs/home.js"></script>
}
