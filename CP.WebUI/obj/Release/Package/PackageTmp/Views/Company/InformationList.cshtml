@model  CP.Entities.Model.CompanyInformation
@using CP.BusinessLayer.Tools

<div class="table table-responsive tblCompany">
    <table class="table table-bordered display no-wrap" cellspacing="0" width="100%" id="tblCompany">
        <thead>
            <tr>
                <th name="first">
                    <div class="custom-control Checkall  custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="CheckAll">
                        <label class="custom-control-label" for="CheckAll"></label>
                    </div>
                </th>
                <th>Başlık 1</th>
                <th>Açıklama 1</th>
                <th>Başlık 2</th>
                <th>Açıklama 2</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody id="TdCompanyList">
            @if (!Model.IsNullObject())
            {
                <tr>
                    <td>
                        <div class="custom-control  custom-checkbox">
                            <input type="checkbox" class="custom-control-input check" value="@Model.Id" id="Check-@Model.Id">
                            <label class="custom-control-label" for="Check-@Model.Id"></label>
                        </div>
                    </td>
                    <td>
                        @Model.Header1
                    </td>
                    <td>
                        @Model.Description1
                    </td>
                    <td>
                        @(Model.Header2 ?? "Başlık 2 bulunamadı")
                    </td>
                    <td>
                        @(Model.Description2 ??"Açıklama 2 bulunamadı")
                    </td>
                    <td class="text-center">
                        <i class="fas fa-pencil-alt pencil-edit btnInformationUpdate mr-2" data-id="@Model.Id"></i>

                        <i class="fa fa-trash trash-edit btnInformationDelete" data-id="@Model.Id"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>