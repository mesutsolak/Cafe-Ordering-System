
@{
    ViewBag.Title = "Genel Bilgiler";
}


<div class="alert alert-info mt-3" role="alert">
    <div class="d-flex flex-row bd-highlight">
        <div class="p-2 bd-highlight">
            <i class="fas fa-info-circle fa-2x"></i>
        </div>
        <div class="p-2 bd-highlight mt-1">
            Genel bilgi üzerinde işlem yapmak için aşağıdaki listeyi kullanın.
        </div>
    </div>
</div>


<div class="card mt-4">
    <div class="card-header">
        <div class="d-flex bd-highlight">
            <div class="p-2 bd-highlight mt-1">
                <i class="fas fa-file-signature fa-2x"></i>
            </div>
            <div class="p-2 bd-highlight">
                <h2>Genel Bilgi</h2>
            </div>
            <div class="ml-auto p-2 bd-highlight">
                <button class="btn btn-primary" id="btnGeneralAdd">
                    <i class="fas fa-plus mr-2"></i> Bilgi Ekle
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="card-title">
        </div>
        <div class="general-information-list">
            @(Html.Action("GeneralList", "Company"))
        </div>
    </div>
</div>





<div class="general-information-add">
    @Html.Action("GeneralAdd", "Company")
</div>

<div class="general-information-update">

</div>

<div class="modal inmodal" id="ImageShowModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-image mr-2"></i>Resim Görüntüle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="" id="ImgViewSrc" width="100%" />
            </div>
        </div>
    </div>
</div>


@section js {
    <script src="~/Content/js/Pagejs/General.js"></script>
}
