@using CP.BusinessLayer.Tools
@model List<CP.Entities.Model.Category>

<div class="table table-responsive tblresponsive">
    <table class="table table-bordered display no-wrap" cellspacing="0" width="100%" id="tblcategory">
        <thead>
            <tr>
                <th name="first">
                    #
                </th>
                <th>Adı</th>
                <th>Resim</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody id="TdCategoryList">
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        @((category.Name.IsNullString() == true) ? "Kategori Boş":category.Name)
                    </td>
                    <td class="text-center">
                        <img src="@(Url.Content((category.Image.IsNullString() == true) ? "~/Content/image/no-image.png" : category.Image))" height="30" class="avatar-sm" id="ImageView" />
                    </td>
                    <td class="text-center">
                        <i class="fas fa-pencil-alt categoryUpdate pencil-edit mr-2" data-id="@category.Id"></i>

                        <i class="fa fa-trash categoryDelete trash-edit" data-id="@category.Id"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

