@model List<CP.Entities.Model.Campaign>

<div class="table table-responsive tblresponsive">
    <table class="table table-bordered display no-wrap" cellspacing="0" width="100%" id="tblCampaign">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Miktar</th>
                <th>Fiyat</th>
                <th>Resim</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody id="tdCampaignList">
            @foreach (var campaign in Model)
            {
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        @campaign.Title
                    </td>
                    <td>
                        @if (campaign.Description.Length > 45)
                        {
                            <label class="campaign-detail" value="@(campaign.Description)"> @(campaign.Description.Substring(0, 25)+"...") </label>
                        }
                        else
                        {
                            @campaign.Description
                        }
                    </td>
                    <td>
                        @campaign.Amount
                    </td>
                    <td>
                        @campaign.Price
                    </td>
                    <td class="text-center">
                        <img src="@(Url.Content(campaign.Image ?? "~/Content/image/no-image.png"))" height="30" class="avatar-sm" id="ImageView" />
                    </td>
                    <td class="text-center">
                        <i class="fas fa-pencil-alt pencil-edit CampaignUpdate mr-2" data-id="@campaign.Id"></i>

                        <i class="fa fa-trash trash-edit CampaignDelete" data-id="@campaign.Id"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
