
@{
    ViewBag.Title = "Kampanyalar";
}


@section css{
    <link href="~/Content/framework/DataTable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<div class="alert alert-info mt-3" role="alert">
    <div class="d-flex flex-row bd-highlight">
        <div class="p-2 bd-highlight">
            <i class="fas fa-info-circle fa-2x"></i>
        </div>
        <div class="p-2 bd-highlight mt-1">
            Kampanyalar üzerinde işlem yapmak için aşağıdaki listeyi kullanın.
        </div>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header">
        <div class="d-flex bd-highlight">
            <div class="p-2 bd-highlight mt-1">
                <i class="fas fa-bullhorn fa-2x"></i>
            </div>
            <div class="p-2 bd-highlight">
                <h2>Kampanyalar</h2>
            </div>
            <div class="ml-auto p-2 bd-highlight">
                <button class="btn btn-primary" onclick="ModalShow('CampaignAddModal')" id="CampaignAdd">
                    <i class="fas fa-plus mr-1"></i> Kampanya Ekle
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="card-title">
            <div class="card-text campaign-body">
                @Html.Action("CampaignList", "Campaign")
            </div>
        </div>
    </div>

    <div class="modal inmodal" id="ImageShowModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-image mr-2"></i>Resim Görüntüle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img src="" id="ImgViewSrc" width="465" />
                </div>
            </div>
        </div>
    </div>

    <div class="campaign-update-modal">

    </div>

    <div class="campaign-detail-modal-content">
        <div class="modal inmodal" id="CampaignDetailModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable">
                <div class="modal-content animated bounceInRight">
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-bullhorn mr-2"></i>Kampanya Açıklaması</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body campaign-detail-modals">

                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="campaign-add">
        @Html.Action("CampaignAdd", "Campaign")
    </div>



    @section js{

        <script src="~/Content/framework/DataTable/js/jquery.dataTables.min.js"></script>
        <script src="~/Content/framework/DataTable/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/Content/js/Pagejs/Campaign.js"></script>
    }


</div>