@model List<CP.Entities.Model.Product>

@{
    ViewBag.Title = "Ürünler";
}

@section css{
    <link href="~/Content/framework/DataTable/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<div class="alert alert-info mt-3" role="alert">
    <div class="d-flex flex-row bd-highlight">
        <div class="p-2 bd-highlight">
            <i class="fas fa-info-circle fa-2x"></i>
        </div>
        <div class="p-2 bd-highlight mt-1">
            Ürünler üzerinde işlem yapmak için aşağıdaki listeyi kullanın.
        </div>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header">
        <div class="d-flex flex-row bd-highlight">
            <div class="p-2 bd-highlight mt-1">
                <i class="fas fa-box-open fa-2x"></i>
            </div>
            <div class="p-2 bd-highlight">
                <h2>Ürünler</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-7 mt-1">
                    <div class="d-flex flex-row bd-highlight mb-3">
                        <div class="p-2 bd-highlight">
                            <div class="dropdown">
                                <a class="btn btn-info dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-folder mr-1"></i> Dosya İşlemleri
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#"><i class="fas fa-file-import mr-1"></i> Excel ile Ekle</a>
                                    <a class="dropdown-item" href="#"><i class="fas fa-file-export mr-1"></i> Excel'e Aktar</a>
                                    <a class="dropdown-item" href="#"><i class="fa fa-print mr-1"></i> Yazdır</a>
                                    <a class="dropdown-item" href="#"><i class="fas fa-image mr-1"></i> Görsel Al</a>
                                </div>
                            </div>
                        </div>
                        <div class="p-2 bd-highlight">
                            <button class="btn btn-success" id="btnSecilenler">
                                Seçilenler (0)
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="d-flex flex-row-reverse bd-highlight">
                        <div class="p-2 bd-highlight">
                            <button class="btn btn-primary" id="ProductAdd">
                                <i class="fas fa-plus mr-1"></i> Ürün Ekle
                            </button>
                            <button class="btn btn-danger" id="ProductRemoveAll">
                                <i class="fa fa-trash mr-1"></i> Ürünleri Sil
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-text product-body">
        </div>
    </div>
</div>

<div class="modal inmodal" id="ImageShowModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-image mr-2"></i>Resim Görüntüle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="" id="ImgViewSrc" width="465" />
            </div>
        </div>
    </div>
</div>

<div class="product-update-modal">

</div>

<div class="product-detail-modal-content">
    <div class="modal inmodal" id="ProductDetailModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fa fa-box-open mr-2"></i>Ürün Açıklaması</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body product-detail-modals">

                </div>
            </div>
        </div>
    </div>

</div>


@Html.Action("ProductAdd", new { Controller = "Home", Action = "ProductAdd" })


@section js{

    <script src="~/Content/framework/DataTable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/framework/DataTable/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/js/Pagejs/Meal.js"></script>
}